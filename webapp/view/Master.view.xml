<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="fclFlexibleColumnLayout.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f">
	<f:DynamicPage id="masterPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Products"></Title>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<!--<Button text="clickMe" press="onListItemPress"/>-->
			<Table id="table" items="{oProductModel>/ProductCollection}">
				<columns>
					<Column>
						<Text text="Product"/>
					</Column>
					<Column>
						<Text text="Price"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{oProductModel>Name}" text="{oProductModel>ProductId}"/>
							<ObjectNumber
								number="{ parts:[{path:'oProductModel>Price'},{path:'oProductModel>CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
								unit="{oProductModel>CurrencyCode}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
		<f:footer></f:footer>
	</f:DynamicPage>
</mvc:View>